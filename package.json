{
  "name": "mbv-electron",
  "version": "1.0.0",
  "description": "Note-taking app implementing MBV architecture in Electron with TypeScript",
  "main": "electron.js",
  "scripts": {
    "start": "electron .",
    "dev": "node tools/dev-server.js",
    "build": "vite build && electron-builder --config electron-builder.js",
    "build:main": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "lint": "tsc --noEmit",
    "test": "jest"
  },
  "build": {
    "appId": "com.mbv-electron",
    "productName": "MBV Notes",
    "files": [
      "dist/**/*",
      "electron.js",
      "src/main/**/*",
      "src/shared/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-${version}-setup.${ext}",
      "extraResources": {
        "from": "node_modules/",
        "to": "node_modules/",
        "filter": [
          "**/*",
          "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
          "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
          "!**/node_modules/*.d.ts",
          "!**/node_modules/.bin"
        ]
      }
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "deb"
    },
    "asar": true,
    "asarUnpack": [],
    "npmRebuild": true,
    "forceCodeSigning": false
  },
  "keywords": [
    "electron",
    "mbv",
    "architecture",
    "typescript",
    "react"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "electron-is-dev": "^3.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vite": "^6.3.5",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^29.7.0",
    "playwright": "^1.52.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "wait-on": "^8.0.3"
  }
}
